<!DOCTYPE html>
<html>
<head>
    <title>Form Register</title>
</head>
<body>
    <h1>Register</h1>

    <form id="registerform">
        <input required type="text" id="nama" placeholder="Nama Lengkap"/><br />
        <input required type="email" id="email" placeholder="Email"/><br />
        <input required type="password" id="password" placeholder="Password"/><br />
        <input required type="number" id="nomorHP" placeholder="Nomor HP"/><br />
        <input required type="date" id="tanggal" placeholder="Tanggal Lahir"/><br />

        <label><input type="radio" name="gender" value="Laki-laki" required> Laki-laki</label>
        <label><input type="radio" name="gender" value="Perempuan"> Perempuan</label><br />

        <button type="submit" style="color : red">Submit</button>
    </form>

    <table id="dataTable" style="border: 1px solid #ccc">
        <thead>
            <tr>
                <th>Nama</th>
                <th>Email</th>
                <th>Nomor HP</th>
                <th>Tanggal Lahir</th>
                <th>Jenis Kelamin</th>
            </tr>
        </thead>
        <tbody>
            <!-- baris baru akan ditambahkan di sini -->
        </tbody>
    </table>

    <script>
        document.getElementById("registerform").addEventListener("submit", function(e) {
            e.preventDefault();

            const nama = document.getElementById("nama").value;
            const email = document.getElementById("email").value;
            const nomorHP = document.getElementById("nomorHP").value;
            const tanggal = document.getElementById("tanggal").value;
            const gender = document.querySelector('input[name="gender"]:checked')?.value || '';

            const table = document.getElementById("dataTable").querySelector("tbody");
            const newRow = table.insertRow();

            newRow.insertCell(0).textContent = nama;
            newRow.insertCell(1).textContent = email;
            newRow.insertCell(2).textContent = nomorHP;
            newRow.insertCell(3).textContent = tanggal;
            newRow.insertCell(4).textContent = gender;

            document.getElementById("registerform").reset();
        });
    </script>
</body>
</html>
