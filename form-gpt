    <table id="dataTable">
      <thead>
        <tr>
          <th>Nama</th>
          <th>Email</th>
          <th>Nomor HP</th>
          <th>Tanggal Lahir</th>
          <th>Jenis Kelamin</th>
        </tr>
      </thead>
      <tbody>
        <!-- Data will be inserted here -->
      </tbody>
    </table>
